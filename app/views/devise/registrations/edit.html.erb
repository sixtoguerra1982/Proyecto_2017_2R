<%= render 'shared/navbar' %>
<section class="container mt-5">
  <div class="row justify-content-center pt-3 formulario_menu">
    <div class="col-12 col-sm-12 col-md-6 col-lg-6">
      <h3>Editar Datos de registro:</h3>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="form-group">
          <%= f.label :name, "Nombre de usuario:" %>
          <%= f.text_field :name, class: "form-control form-control-lg", autofocus: true, required: true %>
        </div>

        <div class="form-group">
          <%= f.label :phone, "Teléfono" %>
          <%= f.text_field :phone, class: "form-control form-control-lg" %>
        </div>

        <div class="form-group">
          <%= f.label :picture, "Foto para tu perfil:" %>
          <%= f.file_field :picture, class: "form-control" %>
        </div>


        <hr class="bg-info">
        <h5> Cambia tu contraseña:</h5>

        <div class="form-group">
          <%= f.label :current_password, "Contaseña Actual" %>
          <%= f.password_field :current_password, autocomplete: "off", class: "form-control form-control-lg" %>
          <i>(Necesitamos su contraseña actual para
            confirmar cambio de contraseña)</i><br />
        </div>

        <div class="form-group">
          <%= f.label :password, "Contraseña nueva" %>
          <%= f.password_field :password, autocomplete: "off", class: "form-control form-control-lg" %>
           <i>(Déjelo en blanco si no quieres cambiar tu password)</i><br />
          <% if @minimum_password_length %>
            <br />
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation , "Confirma tu nueva contraseña"%>
          <em><%= @minimum_password_length %> Caracteres Minimo</em><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control form-control-lg" %>
        </div>

        <div class="d-flex flex-row">
          <%= f.submit "Actualizar", class: "btn btn-info" %>
          <%= link_to "Volver", :back, class: "ml-auto btn btn-outline-info" %>
        </div>
      <% end %>

      <!-- <h3>Cancel my account</h3> -->
      <!-- <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p> -->
    </div>
  </div>
</section>
<footer>
  <p></p>
</footer>
