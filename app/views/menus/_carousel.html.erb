
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

 <ol class="carousel-indicators">

   <li data-target="#carouselExampleIndicators" data-slide-to="0" class="<%='active' if params[:action] == "new" or params[:action] == "carousel" %>"  ></li>

   <% @menus.each_with_index do |menu,index| %>
     <li data-target="#carouselExampleIndicators" data-slide-to="<%= index + 1 %>" class="<%='active' if menu.id.to_s == params[:id] %>"></li>
   <% end %>
 </ol>

 <div class="carousel-inner" role="listbox">
   <!--  PRIMERA IMAGEN NEW -->
   <div class="carousel-item <%= 'active' if params[:action] == "new" or params[:action] == "carousel" %>">
     <%= image_tag "default_menu.png",class:"d-block img-fluid w-100", alt:"", style:"border-radius: 5%"%>
     <div class="carousel-caption">
       <h3>Nuevo Menu</h3>
       <a href="<%= new_menu_path %>">
         <p class="label_carausel_link">
           <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
         </p>
       </a>
     </div>
   </div>
   <!-- ITERAR IMAGENES -->
    <% @menus.each_with_index do |menu,index| %>
     <div class="carousel-item <%= 'active' if menu.id.to_s == params[:id] %>">
       <%= image_tag menu.picture.thumb ,class:"d-block img-fluid w-100", alt:"", style:"border-radius: 5%"%>
       <div class="carousel-caption">
         <p class="label_carausel"><%= number_to_currency(menu.price, separator: ',', delimiter: '.', precision: 0) %></p>
         <h3><%= menu.name[0,30] %></h3>
         <a href="<%= edit_menu_path(menu) %>">
           <p class="label_carausel_link">
             <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
           </p>
         </a>
       </div>
     </div>
   <% end %>
   <!-- ITERAR IMAGENES -->
 </div>

 <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
   <span class="carousel-control-prev-icon label_carausel_link" aria-hidden="true"></span>
   <span class="sr-only">Previous</span>
 </a>
 <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
   <span class="carousel-control-next-icon label_carausel_link" aria-hidden="true"></span>
   <span class="sr-only">Next</span>
 </a>

</div>

<script>
  $('.carousel').carousel({
    interval: 0
  })
</script>
