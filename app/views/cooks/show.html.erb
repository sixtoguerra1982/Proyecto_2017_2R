<!-- menú de navegación -->
<%= render 'shared/navbar' %>
<div class="container">
	<p id="notice"><%= notice %></p>
	<h1 class="jumbotron"><%= @cook.name %></h1>
	<div class="row">
		<section class="cook col-12 col-sm-12 col-md-3 col-lg-3">
			<%= image_tag @cook.picture, size:"32X32", class: 'card-img-top img-fluid' %>
			<div class="card cook">
			  <div class="card-body">
			    <h4 class="card-title"><%= @cook.name%></h4>
			    <p class="card-text"><%= @cook.biography %></p>
			    <p> <%= @cook.address_commune %></p>
			    <p> <%= @cook.address_region %></p>
			  </div>
			</div>
		</section>

		<section class="menus col-12 col-sm-12 col-md-5 col-lg-5">
			<div class="row container">
				<%= @menus.each_slice(2) do |row|  %>
					<% row.each do |menu| %>
						<div class="col-md-6">
							<div class="card-deck">
								<div class="card">
									<%= image_tag menu.picture.thumb, class: 'card-img-top img-fluid' %>
									<div class="card-body">
									<h6><%= menu.name %></h6>
									<p><%= "$ " + menu.price.to_s %><p>
									<p class="card-text"><%= menu.description %></p>
									<%= link_to "Reservar",  menu_orders_path(menu), method: :post, class: "btn btn-success" %>
								</div>
							</div>
						</div>
					</div>
				<% end %>
			<div class="w-100" style="margin-top: 20px"></div>
			<% end %>
			</div>
		</section>
		<div class="col-12 col-sm-12 col-md-4 col-lg-4">
			<div class="field">
				<ul id="comments-box">
					<% @cook.comments.each do |comment| %>
						<li><%= comment.content %> - <%= current_user.email %></li>
					<% end %>
  			</ul>
 				<%= render "comments/form" %>
			</div>
	</div>
</div>
